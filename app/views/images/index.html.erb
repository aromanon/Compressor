<div id="home_wrap">
  <h1>Welcome to the application "Image Compressor"</h1>

  <%= form_tag({ controller: 'images', action: 'compress' }, multipart: true) do %>
    <div class="form-group form_wrap">
      <div class="form-group">
        <%= label_tag :email, 'Email', class: 'form-label' %>
        <%= email_field_tag :email, nil, required: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :image, 'Image', class: 'form-label' %>
        <%= file_field_tag :image, required: true, class: 'form-control' %>
      </div>

      <%= submit_tag "Upload", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
